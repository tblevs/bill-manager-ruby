<!-- necessary for css to work for partials -->
<%= stylesheet_link_tag "partials.css" %>

<script>
  $(function() {
          $( "#datepicker" ).datepicker({
              showOn: "button",
              buttonImage: "https://i.ibb.co/4ps1BNt/calendar.png",
              buttonImageOnly: true
          });
      });
</script>

<div class = "expense-adder-form" style="border:1px solid black;">
  <%= form_with scope: :expense, local: true, class:"expense-adder-form" do |form| %>
      <div class = "form-group">
        <%= content_tag(:label, 'Aa') %>
        <%= content_tag(:input, '', :class=>"expense-adder-form-input") %>
      </div>

      <div class = "form-group">
        <%= content_tag(:label, '$', :class=>"expense-adder-form-label") %>
        <%= content_tag(:input, '', :class=>"expense-adder-form-input") %>
      </div>

      <div class = "form-group">
        <%= content_tag(:input, '', :id=>"datepicker", :style=>"width:80px") %>
      </div>

      <div class = "form-group">
        <%= form.submit innerHTML="Add" %>
      </div>

    <% end %>

</div>

